<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_app"
            tools:context=".ui.home.MainActivity">

            <TextView
                android:id="@+id/main_activtiy_header_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/arbfonts_amin"
                android:text="@string/labal_main_activtiy_header_page"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/main_activtiy_header_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_logo_quran_main"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_activtiy_header_page" />

            <Button
                android:id="@+id/main_activity_quran_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/backgroundbutton"
                android:drawableTop="@drawable/ic_quran_btn_"
                android:fontFamily="@font/arbfonts_amin"
                android:paddingTop="10dp"
                android:text="@string/labal_main_activty_elmoshf"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_activtiy_header_image" />

            <Button
                android:id="@+id/main_activity_listen_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/backgroundbutton"
                android:drawableTop="@drawable/ic_listen"
                android:fontFamily="@font/arbfonts_amin"
                android:paddingTop="10dp"
                android:text="@string/labal_main_activity_elmoshf_listen"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_activtiy_header_image" />

            <Button
                android:id="@+id/main_activity_btn_radio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/backgroundbutton"
                android:drawableTop="@drawable/ic_radio_btn"
                android:fontFamily="@font/arbfonts_amin"
                android:text="@string/labal_main_activity_radio"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_activity_quran_btn" />

            <Button
                android:id="@+id/main_activity_btn_azkar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/backgroundbutton"
                android:drawableTop="@drawable/ic_azkar"
                android:fontFamily="@font/arbfonts_amin"
                android:paddingTop="20dp"
                android:text="@string/labal_main_activity_azkar"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_activity_btn_radio" />

            <Button
                android:id="@+id/main_activity_btn_ahdes"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/backgroundbutton"
                android:drawableTop="@drawable/ic_islam_ahdes"
                android:fontFamily="@font/arbfonts_amin"
                android:text="@string/labal_main_activity_btn_ahdes"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_activity_listen_btn" />

            <Button
                android:id="@+id/main_activtiy_btn_elsabha"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/backgroundbutton"
                android:drawableTop="@drawable/ic_elsabha"
                android:fontFamily="@font/arbfonts_amin"
                android:text="@string/laba_main_activtiy_elsabha"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_activity_btn_ahdes" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>